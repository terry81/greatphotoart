<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 1.6//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="1.7" type="template" client="site">
	<name>blackwhite</name>
	<version>2.5.0</version>
	<creationDate>June 2012</creationDate>
	<author>IceTheme</author>
	<authorEmail>support@icetheme.com</authorEmail>
	<authorUrl>http://www.icetheme.com</authorUrl>
	<copyright>Copyright (C) 2008 - 2012 IceTheme.com</copyright>
    <license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<description>Black and White - May 2012 Free Joomla Template By IceTheme.com</description>

	<files>
		<folder>css</folder>
		<folder>html</folder>
		<folder>images</folder>
		<folder>icetools</folder>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>favicon.ico</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
		<filename>css_vars.php</filename>
	</files>

	<positions>
			<position>language</position>
			<position>toggle_pannel</position>
			<position>topmenu</position>
			<position>testimonials</position>
			<position>events</position>
			<position>search</position>
			<position>mainmenu</position>
			<position>iceslideshow</position>
			<position>header1</position>
			<position>header2</position>
			<position>header3</position>
			<position>header4</position>
			<position>donate</position>
			<position>showcase1</position>
			<position>showcase2</position>
			<position>showcase3</position>
			<position>showcase4</position>
			<position>promo1</position>
			<position>promo2</position>
			<position>promo3</position>
			<position>promo4</position>
			<position>breadcrumbs</position>
			<position>left</position>
			<position>right</position>
			<position>icecarousel</position>
			<position>bottom1</position>
			<position>bottom2</position>
			<position>bottom3</position>
			<position>bottom4</position>
			<position>about</position>
			<position>latest_tweet</position>
			<position>footer1</position>
			<position>footer2</position>
			<position>footer3</position>
			<position>footer4</position>
			<position>footer</position>
			<position>copyright</position>
			<position>footermenu</position>
			<position>no-position</position>
			<position>debug</position>
		</positions>
	

	<languages folder="languages">
		<language tag="en-GB">en-GB/en-GB.tpl_blackwhite.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_blackwhite_sys.ini</language>
	</languages>
	
	<config>
		<fields name="params">
			<fieldset name="basic">
				
				<field name="layout_leftcol_width" type="text" default="240" label="TPL_FIELD_LEFTCOLWIDTH_LABEL" description="TPL_FIELD_LEFTCOLWIDTH_DESC" filter="int" />
				
				<field name="layout_rightcol_width" type="text" default="240" label="TPL_FIELD_RIGHTCOLWIDTH_LABEL" description="TPL_FIELD_RIGHTCOLWIDTH_DESC" filter="int" />

					
				<field name="logo" type="media" hide_default="1" label="TPL_FIELD_LOGO_LABEL" description="TPL_FIELD_LOGO_DESC" />
				
				<field name="queries" type="radio" default="1" label="TPL_FIELD_QUERIES_LABEL"  description="TPL_FIELD_QUERIES_DESC" filter="int">
					<option value="0">TPL_FIELD_NO</option>
					<option value="1">TPL_FIELD_YES</option>
				</field>
					
				
				<field name="go2top" type="radio" default="1" label="TPL_FIELD_GOTOP_LABEL"  description="TPL_FIELD_GOTOP_DESC" filter="int">
					<option value="0">TPL_FIELD_NO</option>
					<option value="1">TPL_FIELD_YES</option>
				</field>
				
				
				<field type="spacer" class="text" label="" />
	 			<field type="spacer" class="text" label="" />
					<field type="spacer" class="text" label="" />
	 			<field type="spacer" class="text" label="" />
				
				<field name="logo_width" type="text" default="220" label="TPL_FIELD_LOGOWIDTH_LABEL" description="TPL_FIELD_LOGOWIDTH_DESC" filter="int" />
				
				<field name="logo_height" type="text" default="60" label="TPL_FIELD_LOGOHEIGHT_LABEL" description="TPL_FIELD_LOGOHEIGHT_DESC" filter="int" />	

				<field type="spacer" class="text" label="" />
	 			<field type="spacer" class="text" label="" />
				
				<field name="icelogo" type="radio" default="1" label="TPL_FIELD_ICELOGO_LABEL"  description="TPL_FIELD_ICELOGO_DESC" filter="int">
					<option value="0">TPL_FIELD_NO</option>
					<option value="1">TPL_FIELD_YES</option>
				</field>
				
			
							
				
			</fieldset>
		</fields>
	</config>
</extension>
